{
  "manifest_version": 2,

  "name": "Simple Time Tracker",
  "description": "This extension shows time spent in each tab",
  "version": "1.0",
  "background": {
    "scripts" : ["utils.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
